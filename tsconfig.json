{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "pretty": true,
    "strict": true,
    "types": ["node", "mocha"]
  },
  "exclude": [
    "node_modules"
  ]
}
